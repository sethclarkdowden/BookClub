<div class="span6 offset2">
  <div class="row-fluid">
    <h2>List of clubs</h2>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Options</th>
        </tr>
      </thead>

      <% @clubs.each do |club| %>
        <tr>
          <td><%= club.id %></td>
          <td><%= link_to club.name, club %></td>
          <td>
            <%= link_to 'Edit', edit_club_path(club.id), :method => :get, :class => "btn" %>
            <%= link_to 'Delete', club, :method => 'delete', :class => "btn btn-danger" %>
          </td>
        </tr>
      <% end -%>
    </table>

    <p><%= link_to 'New Club', new_club_path, :method => :get, :class => "btn" %></p>
  </div>
</div>
