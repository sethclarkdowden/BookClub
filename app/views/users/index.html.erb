<div class="span6 offset2">
  <div class="row-fluid">
    <h2>List of Users</h2>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Options</th>
        </tr>
      </thead>

      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user.name, user %></td>
          <td>
            <%= link_to 'Edit', edit_user_path(user.id), :method => :get, :class => "btn" %>
            <%= link_to 'Delete', user, :method => 'delete', :class => "btn btn-danger" %>
          </td>
        </tr>
      <% end -%>
    </table>

    <p><%= link_to 'New User', new_user_path, :method => :get, :class => "btn" %></p>
  </div>
</div>
